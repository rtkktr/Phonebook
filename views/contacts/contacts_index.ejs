<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Contacts</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 50px;
    }
    .card {
      margin-bottom: 20px;
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .search-bar {
      margin-bottom: 20px;
    }
    .search-bar .input-group {
      flex: 1;
      border: 1px solid #ced4da;
      border-radius: 5px;
      overflow: hidden;
    }
    .search-bar .form-control {
      border: none;
      border-radius: 0;
      box-shadow: none;
    }
    .search-bar .btn {
      border: none;
      border-radius: 0 5px 5px 0;
    }
    .search-bar .btn-primary {
      background-color: #007bff;
    }
    .search-bar .btn-primary:hover {
      background-color: #0056b3;
    }
    .contact-card {
      display: flex;
      margin-bottom: 20px;
      border: 1px solid #e1e4e8;
      border-radius: 10px;
      overflow: hidden;
      background-color: #ffffff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .contact-card img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
    }
    .contact-card .card-body {
      padding: 1rem;
    }
    .contact-card h5 {
      margin-bottom: 0.5rem;
      color: #333333;
    }
    .contact-card p {
      margin-bottom: 0.5rem;
      color: #666666;
      font-size: 0.9rem;
    }
    .contact-card .btn-primary {
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
      background-color: #007bff;
      border-color: #007bff;
    }
    .contact-card .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
    .search-box {
      background-color: #ffffff;
      border: 1px solid #ced4da;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .create-contact-btn {
      float: right;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="search-box">
          <!-- Search Bar -->
          <form action="/contacts" method="GET" class="search-bar mb-3">
            <div class="input-group">
              <input type="text" class="form-control py-2 border-right-0 border" placeholder="Search by name..." name="name">
              <span class="input-group-append">
                <button class="btn btn-outline-primary border-left-0 border" type="submit">Search Name</button>
              </span>
            </div>
          </form>

          <form action="/contacts" method="GET" class="search-bar mb-3">
            <div class="input-group">
              <input type="text" class="form-control py-2 border-right-0 border" placeholder="Search by phone..." name="phone">
              <span class="input-group-append">
                <button class="btn btn-outline-primary border-left-0 border" type="submit">Search Phone</button>
              </span>
            </div>
          </form>

          <form action="/contacts" method="GET" class="search-bar mb-3">
            <div class="input-group">
              <input type="text" class="form-control py-2 border-right-0 border" placeholder="Search by email..." name="email">
              <span class="input-group-append">
                <button class="btn btn-outline-primary border-left-0 border" type="submit">Search Email</button>
              </span>
            </div>
          </form>
        </div>
        <button onclick="location.href='/contacts/create'" class="btn btn-primary create-contact-btn">Create Contact</button>
      </div>
      <div class="col-md-9">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">All Contacts</h4>
          </div>
          <div class="card-body">
            <!-- Contacts List -->
            <% contacts.forEach(contact => { %>
              <div class="contact-card">
                <img src="/uploads/bookCovers/<%= contact.coverImageName || 'placeholder.jpg' %>" class="img-fluid rounded" alt="Contact Cover">
                <div class="card-body">
                  <h5 class="mb-1"><%= contact.firstName %> <%= contact.lastName %></h5>
                  <p class="mb-1"><strong>Phone:</strong> <%= contact.phone %></p>
                  <p class="mb-1"><strong>Email:</strong> <%= contact.email %></p>
                  <p class="mb-1"><strong>Address:</strong> <%= contact.address %></p>
                  <a href="/contacts/<%= contact._id %>" class="btn btn-primary btn-sm">View Details</a>
                </div>
              </div>
            <% }) %>

            <% if (contacts.length === 0) { %>
              <p>No contacts found.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
